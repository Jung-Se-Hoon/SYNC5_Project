<mvc:View xmlns:f="sap.f" controllerName="zc501sd.cds0001.priceincrease.controller.Price_Increase_View"
    displayBlock="true"
    xmlns:t="sap.ui.table"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:u="sap.ui.unified"
	xmlns:c="sap.ui.core"
	xmlns:layout="sap.ui.layout"
    xmlns="sap.m">
<Page id="page" title="판매단가 수정">
        <content>
            <!-- Header Image -->
            <VBox>
                <Image id="headerImage" width="100%" height="200px" />
            </VBox>

            <!-- Tab Navigation -->
            <IconTabBar>
                <items>
                    <IconTabFilter text="전체" />
                    <IconTabFilter text="모션 침대" />
                    <IconTabFilter text="매트리스" />
                    <IconTabFilter text="소파" />
                    <IconTabFilter text="슬림케어" />
                    <IconTabFilter text="행사제품" />
                </items>
            </IconTabBar> 

            <f:GridList items="{/PriceIncreaseSet}">
                <CustomListItem>
                    <!-- Product List -->
                    <VBox class="sapUiSmallMargin">
                        <HBox>
                            <VBox class="sapUiSmallMargin">
                                <Image 
                                    src="img/{Matnr}.png" 
                                    width="200px" 
                                    height="150px"
                                    press=".onImagePress" 
                                    class="sapUiResponsiveMargin"/>
                                <Text text="{Maktx}" />
                                <Text text="{
                                    parts:[{path:'Kzwi1'},{path:'Waers'}],
                                    type: 'sap.ui.model.type.Currency',
                                    formatOptions: { showMeasure: true }
                                }" wrapping="false" />
                                <Text text="★ 4.9 (14)" />
                            </VBox>
                        </HBox>
                    </VBox>
                </CustomListItem>
            </f:GridList>
        </content>
    </Page>

<Dialog id="priceDialog" title="판매 가격 상세">
    <VBox
        class="sapUiSmallMargin sapUiResponsiveMargin"
        justifyContent="Center"
        alignItems="Center"
        width="100%">
        <!-- <Image src="img/{Matnr}.png" width="80%" height="200px" /> -->
        <Text text="제품명: {Maktx}" textAlign="Center" wrapping="true" class="sapUiSmallMargin" />
        
        <!-- 수정 가능한 Input 필드 -->
        <Input
            value="{Kzwi1}"
            description="{Waers}"
            textAlign="Center"
            width="80%"
            class="sapUiSmallMargin"
            type="Number"
            liveChange=".onPriceChange" />
    </VBox>
    <beginButton>
        <Button text="저장" press=".onSavePress" class="sapUiSmallMargin" />
    </beginButton>
    <endButton>
        <Button text="취소" press=".onCancelPress" class="sapUiSmallMargin" />
    </endButton>
</Dialog>


</mvc:View>
